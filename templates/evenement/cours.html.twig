{% extends 'base.html.twig' %}

{%  block title %}gestion cours{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; }
        .example-wrapper { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        {% if is_granted('ROLE_ADMIN') %}
            <h1>Liste des cours</h1>
            <div class="text-center mt-3">
                <a href="{{ path('nouveau_cours') }}" class="btn btn-primary">Créer un cours</a>
            </div>
            <table>
                <thead>
                <tr>
                    <th>Titre</th>
                    <th>Intervenant</th>
                    <th>Début</th>
                    <th>Fin</th>
                    <th>Supprimer</th>
                </tr>
                </thead>
                <tbody>
                {% for evenement in evenements %}
                    <tr>
                        <td>{{ evenement.titre }} </td>
                        {#  <td>{{ evenement.FkIntervenant.prenom }} {{ evenement.FkIntervenant.nom }}</td> #}
                        <td>{{ evenement.debut|date('d-m-Y H:i') }}</td>
                        <td>{{ evenement.fin|date('d-m-Y H:i') }}</td>
                        <td><a href="{{ path('cours_supprimer', {'id': evenement.getId()}) }}">Supprimer</a></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% endif %}
    </div>
{%  endblock %}