{% extends 'base.html.twig' %}

{%  block title %}gestion matiere{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; }
        .example-wrapper { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <h1>Créer une matière</h1>
    {{ form_start(matiereForm) }}
    {{ form_row(matiereForm.intitule) }}
    {{ form_row(matiereForm.duree) }}
    {{ form_row(matiereForm.fk_intervenant) }}
    {{ form_row(matiereForm.specialite) }}
    {{ form_rest(matiereForm) }}
    <button type="submit" class="btn btn-primary">Créer</button>
    {{ form_end(matiereForm) }}
{%  endblock %}